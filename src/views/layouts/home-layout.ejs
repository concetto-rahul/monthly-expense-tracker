    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <script src="/js/sb-admin-2.min.js"></script>
    <script>
      const todaysDate = "<%= data.todaysDate %>";
      $(function () {
        $('[data-toggle="tooltip"]').tooltip();
      });

      $('[name="month_year"]').change(function () {
        console.log("this.value", this.value);
        window.location = "/admin/dashboard?month_year=" + this.value;
      });

      $("a.enterAmountBtn").click(function () {
        const modal = $("#enterAmountModal");
        modal
          .find("#enterAmountModalLabel")
          .text("Save amount - " + $(this).data("subname"));
        modal.find('[name="cat_id"]').val($(this).data("catid"));
        modal.find('[name="sub_cat_id"]').val($(this).data("subid"));
        modal.find('[name="transaction_date"]').val(todaysDate);
        modal.modal("show");
      });

      $("#submitAmountData").click(function () {
        $(this).prop("disabled", true);
        $("#saveAmountData").find("input").removeClass("is-invalid");
        $("#saveAmountData").submit();
      });

      $("#saveAmountData").submit(function (event) {
        event.preventDefault();
        const formData = $(this).serializeArray();
        $.post(
          "/admin/add-transactions",
          formData,
          function (res) {
            if (res.status) {
              location.reload();
            } else {
              Object.keys(res.errors).forEach((val) => {
                if (["allMsg", "cat_id", "sub_cat_id"].includes(val)) {
                  $("#saveAmountData")
                    .find("#errorMessageSpan")
                    .text(res.errors[val]);
                } else {
                  const inputFind = $("#saveAmountData").find(
                    "[name='" + val + "']"
                  );
                  inputFind && inputFind.addClass("is-invalid");
                  inputFind &&
                    inputFind
                      .siblings(".invalid-feedback")
                      .text(res.errors[val]);
                }
              });
              $("#submitAmountData").prop("disabled", false);
            }
          },
          "json"
        );
      });

      $("a.updateAmountBtn").click(function () {
        const modal = $("#updateAmountModal");
        modal.find('[name="t_id"]').val($(this).data("tid"));
        modal.find('[name="amount"]').val($(this).data("tamount"));
        modal.find('[name="transaction_date"]').val($(this).data("tdate"));
        modal.find('[name="description"]').val($(this).data("tdesc"));
        modal.modal("show");
      });
      $("#updateAmountData").click(function () {
        $(this).prop("disabled", true);
        $("#updateAmountDataForm").find("input").removeClass("is-invalid");
        $("#updateAmountDataForm").submit();
      });

      $("#updateAmountDataForm").submit(function (event) {
        event.preventDefault();
        const formData = $(this).serializeArray();
        $.post(
          "/admin/update-transactions",
          formData,
          function (res) {
            if (res.status) {
              location.reload();
            } else {
              Object.keys(res.errors).forEach((val) => {
                if (val == "allMsg" || val == "t_id") {
                  $("#updateAmountDataForm")
                    .find("#errorMessageSpan")
                    .text(res.errors[val]);
                } else {
                  const inputFind = $("#updateAmountDataForm").find(
                    "[name='" + val + "']"
                  );
                  if (inputFind) {
                    inputFind.addClass("is-invalid");
                    inputFind
                      .siblings(".invalid-feedback")
                      .text(res.errors[val]);
                  }
                }
              });
              $("#updateAmountData").prop("disabled", false);
            }
          },
          "json"
        );
      });
    </script>
