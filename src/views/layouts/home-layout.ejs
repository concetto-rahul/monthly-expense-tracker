    <div
      class="modal fade"
      id="enterAmountModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="enterAmountModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="enterAmountModalLabel">Save Amount</h5>
            <button
              class="close"
              type="button"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="post" action="" id="saveAmountData">
              <input type="hidden" name="cat_id" value="" />
              <input type="hidden" name="sub_cat_id" value="" />
              <div class="form-group">
                <label for="transaction_date">Enter Date</label>
                <input
                  type="date"
                  class="form-control"
                  id="transaction_date"
                  placeholder="dd-mm-yyyy"
                  name="transaction_date"
                  value=""
                />
                <div class="invalid-feedback"></div>
              </div>
              <div class="form-group">
                <label for="transaction_amount">Enter Amount</label>
                <input
                  type="text"
                  class="form-control"
                  id="transaction_amount"
                  placeholder="Enter amount"
                  name="amount"
                  value=""
                />
                <div class="invalid-feedback"></div>
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <textarea
                  type="text"
                  row="3"
                  class="form-control"
                  id="description"
                  placeholder="Enter Description"
                  name="description"
                  value=""
                ></textarea>
                <div class="invalid-feedback"></div>
              </div>
              <p class="text-danger w-100" id="errorMessageSpan"></p>
            </form>
          </div>
          <div class="modal-footer">
            <button
              class="btn btn-secondary"
              type="button"
              data-dismiss="modal"
            >
              Cancel
            </button>
            <button class="btn btn-primary" id="submitAmountData">Save</button>
          </div>
        </div>
      </div>
    </div>

