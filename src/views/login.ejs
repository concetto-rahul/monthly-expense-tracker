<div class="row">
  <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
  <div class="col-lg-6">
    <div class="p-5">
      <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
      </div>
      <form class="user needs-validation" method="post" action="/admin/login">
        <div class="form-group">
          <input
            type="text"
            class="form-control form-control-user <%- errors?.email && 'is-invalid' %>"
            id="emailAddress"
            aria-describedby="emailHelp"
            placeholder="Enter Email Address..."
            name="email"
            value="<%= enterData?.email || '' %>"
            autocomplete="on"
          />
          <% if(errors?.email){ %>
          <div class="ml-3 invalid-feedback"><%= errors?.email || "" %></div>
          <% } %>
        </div>
        <div class="form-group">
          <input
            type="password"
            class="form-control form-control-user <%- errors?.password && 'is-invalid' %>"
            id="exampleInputPassword"
            placeholder="Password"
            name="password"
            value="<%= enterData?.password || '' %>"
            autocomplete="on"
          />
          <% if(errors?.password){ %>
          <div class="ml-3 invalid-feedback"><%= errors?.password || "" %></div>
          <% } %>
        </div>
        <% if(errors?.invalidCred){ %>
        <span class="ml-3 text-danger"> <%= errors?.invalidCred || "" %> </span>
        <% } %>
        <button class="btn btn-primary btn-user btn-block">Login</button>
        <hr />
        <button class="btn btn-google btn-user btn-block">
          <i class="fab fa-google fa-fw"></i> Login with Google
        </button>
        <button class="btn btn-facebook btn-user btn-block">
          <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
        </button>
      </form>
      <hr />
      <div class="text-center">
        <a class="small" href="/admin/forgot-password">Forgot Password?</a>
      </div>
      <div class="text-center">
        <a class="small" href="/admin/register">Create an Account!</a>
      </div>
    </div>
  </div>
</div>
